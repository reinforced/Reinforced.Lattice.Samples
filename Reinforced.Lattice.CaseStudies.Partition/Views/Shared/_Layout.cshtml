<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reinforced.Lattice Case Study</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    @* This is where we include Reinforced.Lattice Script *@
    <script type="text/javascript" src="~/Scripts/Reinforced.Lattice/reinforced.lattice.js"></script>

    @* And also to this section will have to include our templates *@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js"></script>
    <script type="text/javascript">
        function formatRating(v) {
            // here v - is ICell instance
            var s = "<div style='color:orange' class='text-center'>";
            for (var i = 0; i < 5; i++) {

                // we access v.DataObject to retrieve current row's
                // Rating field. You also can use v.Data to make this function
                // multipurpose
                if (i < v.DataObject.Rating) s += "<span class='glyphicon glyphicon-star'></span>";
                else s += "<span class='glyphicon glyphicon-star-empty'></span>";
            }
            s += "</div>";
            return s;
        }
    </script>
    @RenderSection("scripts", required: false)
</head>
<body>
<div class="container-fluid body-content">
    <div class="row">
        <div class="col-sm-12">
            @RenderBody()
        </div>
    </div>
    
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>
